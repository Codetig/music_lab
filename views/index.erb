<% erb :'partials/_header' %>

<h1>List of Artists</h1>
<table>
<tr>
  <th>Artist Name</th>
  <th>More Info</th>
  <th>Songs</th>
  <th>Delete</th>
</tr>
<% @artists.each do |artist| %>
<tr>
  <td><%= artist.name %></td>
  <td><a href="/artists/<%= artist.id %>">Detail</a></td>
  <td><a href="/artists/<%= artist.id %>/songs">view songs</a></td>
  <td>
    <form action="/artists/<%= artist.id %>" method="POST"><input type="hidden" name="_method" value="delete"><input type="submit" value="Delete"></form>
  </td>
  </tr>
<% end %>
</table>
<a href="/artists/new">Add Artist</a>
<% erb :'partials/_footer' %>